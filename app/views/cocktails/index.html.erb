<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1425&q=80)">
  <h1 class="text-center">hello mr.cocktail!</h1>

  <div class="text-center padded">
    <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>

  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card text-center">

            <% if cocktail.picture %>
              <div class="card-header" style="background-image: url('<%= image_path cocktail.picture%>')">
              </div>
            <% else %>
              <div class="card-header" style="background-image: url('https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1349&q=80')">
              </div>
            <% end %>
            <div class="card-body">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
